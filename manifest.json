{
  "manifest_version": 3,
  "name": "ByteBuddy",
  "version": "1.0",
  "description": "AI-powered tech recommendations",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Toggle ByteBuddy popup"
    }
  }
}
